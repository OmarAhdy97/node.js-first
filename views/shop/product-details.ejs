<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main class="centered">
        
            
            <h1 style="color: rgb(86, 85, 85);"><%=prod.title%></h1>
            <hr>
            <br>
            
            <div >
                <img style="width: 400px; height:400px; object-fit: contain;" src="<%=prod.imageUrl%>" alt="<%=prod.title%>">
            </div>
            <div >
                <h2 class="product__price">$<%=prod.price%></h2>
                <p class="product__description"><%=prod.description%></p>
            </div>
            <form action="/cart" method="post">
                <button class="btn" type="submit">Add to cart</button>
                <input type="hidden" name="prodId" value="<%= prod.id%>">
            </form>

        
    </main>

<%- include('../includes/end.ejs') %>